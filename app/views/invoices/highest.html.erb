<% if current_user %>
  Logged in as <%= current_user.email %>.

  <%= link_to "Log Out", logout_path %>


<p id="notice"><%= notice %></p>

<h1>Five Highest Transaction</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Tax</th>
      <th>Created At</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% Invoice.order(amount: :desc).limit(5).each do |p| %>
      <tr>
    <td><%= p.name %></td>
    <td><%= p.amount %></td>
    <td><%= p.tax %></td>
    <td><%= p.created_at %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %>
<% end %>
